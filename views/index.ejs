<% block('javascript').append(`
  <script>
    const dashboardPage = function(Vue, nodar) {

      nodar.ensureAuthenticated().then((api) => {

        const component = new Vue({
         el: "#dashboardPage",
         data: {
           smartNodes: [],
         },
         mounted: function() {
           this.getSmartNodes();
         },
         methods: {
           getSmartNodes: function() {
             api.service('smart-nodes').find()
              .then(results => {
                console.log(results.data)
                this.smartNodes = results.data;
              })
              .catch(err => console.log(err));
           }
         }
       });

      });

    }(Vue, window.nodar)
  </script>
`) %>